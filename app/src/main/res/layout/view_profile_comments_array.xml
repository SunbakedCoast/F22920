<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/view_profile_comments_array_profilepic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:src="@mipmap/favorites_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintLeft_toRightOf="@+id/view_profile_comments_array_profilepic"
        app:layout_constraintStart_toEndOf="@+id/view_profile_comments_array_profilepic"
        app:layout_constraintTop_toBottomOf="@+id/view_profile_comments_array_name">


        <TextView
            android:id="@+id/view_profile_comments_array_comment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/monsterrat_regular"
            android:gravity="center_vertical"
            android:text="This guys it 10/10 definitely would recommend" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/view_profile_comments_array_name"
        android:fontFamily="@font/monsterratalternates_extralightitallic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="namehere"
        app:layout_constraintStart_toEndOf="@+id/view_profile_comments_array_profilepic"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>